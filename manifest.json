{
	"manifest_version": 2,
	"name": "screen",
	"version" : "1.0.0",
	"description": "screen - Inspect the layout of a site.",
	//"icons": {
		//"16": "images/screen-icon16.png",
		//"48": "images/screen-icon48.png",
		//"128": "images/screen-icon128.png"
	//},
	"browser_action": {
		"default_icon": {
			"19": "images/screen-icon19.png",
			"38": "images/screen-icon38.png"
		},
		"default_title": "screen - click for details",
		"default_popup": "html/screen-popup.html"
	},
	"permissions": [
		"activeTab"
	],
	"content_scripts": [
		{
			"matches": ["http://*/*","https://*/*"],
			"js": ["js/screen-content.js"]
		}
	],
	"background": {
		"scripts": ["js/screen-background.js"],
		"persistent": false
	},
	//"devtools_page": "screen-devtools.html",
	"web_accessible_resources": []
}
